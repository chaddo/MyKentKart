<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_kentKart"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardView_kentKart_height"
    card_view:cardCornerRadius="@dimen/cardView_kentKart_cornerRadius"
    card_view:cardElevation="@dimen/cardView_kentKart_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_extraSmall"
        android:paddingBottom="@dimen/spacing_small"
        android:paddingLeft="@dimen/spacing_small"
        android:paddingRight="@dimen/spacing_small">

        <ImageButton
            android:id="@+id/imageButton_kentKart_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginTop="@dimen/spacing_extraSmall"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit_kentkart"/>

        <TextView
            android:id="@+id/textView_kentKart_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_extraSmall"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/imageButton_kentKart_edit"
            android:textSize="@dimen/textSize_extraLarge"/>

        <TextView
            android:id="@+id/textView_kentKart_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_extraSmall"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/textSize_biggerMedium"/>

        <ImageView
            android:id="@+id/imageView_kentKart_nfcState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/nfc"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
